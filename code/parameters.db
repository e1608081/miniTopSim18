[Setup]
ETCHING = (True, None,
    '''Flag selecting the simulation mode between etching and sputtering.
    ''')

[Initial Conditions]
XMIN = (-50., None,
    '''Minimum x value of the initial surface.
    ''')
XMAX = (50., 'XMAX > XMIN',
    '''Maximum x value of the initial surface.
    ''')
DELTA_X = (1., 'DELTA_X > 0.',
    '''Increment of x values of the initial surface.
    ''')
INITIAL_SURFACE_TYPE = ('Cosine',
    'INITIAL_SURFACE_TYPE in ("Cosine", "DoubleCosine", "Step", "V-SHAPE")',
    '''Initial surface type.
    Cosine: One period of a cosine function.
    DoubleCosine: Two periods of a cosine function.
    Step: Ramp with or without tilt angle, depending if
    FUN_XMIN == FUN_XMAX or FUN_XMIN < FUN_XMAX.
    V-SHAPE: Symmetrical V-profile.
    ''')
FUN_XMIN = (-25., 'FUN_XMIN >= XMIN',
    '''Lower boundary of initial surface function.
    For XMIN < x < FUN_XMIN the surface function is assumed to be constant
    and equal to its value at x = FUN_XMIN.
    ''')
FUN_XMAX = (-25., 'FUN_XMIN < FUN_XMAX <= XMAX',
    '''Lower boundary of initial surface function.
    For XMIN < x < FUN_XMIN the surface function is assumed to be constant
    and equal to its value at x = FUN_XMIN.
    ''')
FUN_PEAK_TO_PEAK = (-100., None,
    '''Amplitude of the Surface in relation to y = 0.
    Negative Values mean negative displacement in y-direction,
    default of 0. means a flat horizontal surface.
    ''')
INITIAL_SURFACE_FILE = ('', None,
    '''Path to a srf-file for surface initialization.
    Use the given file to initialize the surface, if the path is empty,
    use INITIAL_SURFACE_TYPE.
    ''')

[Numerics]
TIME_STEP = (1., 'TIME_STEP > 0.',
    '''Width of the time step.
    ''')
TIME_INTEGRATION = ('normal', 'TIME_INTEGRATION in ("normal", "vertical")',
    '''Method of the time integration.
    Sets the movement of a point in normal direction or vertical (parallel
    to the y-axis).
    ''')

[Beam]
TOTAL_TIME = (float, 'TOTAL_TIME > 0.',
    '''Total beam time = total simulation time.
    ''')
BEAM_CURRENT_DENSITY = (0.001, 'BEAM_CURRENT_DENSITY > 0.',
    '''Beam current density J [A/cm^2]
    The beam flux density can be calculated by F_beam = J/e, where e is the
    elementary charge.
    ''')

[Physics]
ETCH_RATE = (1., 'ETCH_RATE > 0.',
    '''Etch rate = surface velocity if ETCHING==True.
    ''')
SPUTTER_YIELD_0 = (0.11 , 'SPUTTER_YIELD_0 > 0.',
    '''Parameter Y_0 for yamamura formula.
    ''')
SPUTTER_YIELD_F = (1.9 , 'SPUTTER_YIELD_F > 0.',
    '''Parameter f for yamamura formula.
    ''')
SPUTTER_YIELD_B = (0.19 , 'SPUTTER_YIELD_B > 0.',
    '''Parameter b for yamamura formula.
    ''')
SPUTTER_YIELD_FILE = ('' , None,
    '''Filename of Sputter-Yield-Table stored in /miniTopSim/tables.
    If empty, sputter yield will be calculated with the yamamura formula. If
    set, values will be linear interpolated based on the provided data.
    ''')
DENSITY = (5e22 , 'DENSITY > 0.',
    '''Atom density N [Atoms/cm^3], Default: Si: 5e22 Atoms/cm^3.
    ''')

[Output]
PLOT_SURFACE = (True, None,
    '''Flag indicating that the plot function shall be called at the end
    of the simulation.
    ''')
